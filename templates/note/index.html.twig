<h2>Notes</h2>

<h3><a href="{{ path('note_new') }}">Create Note</a></h3>

<style>
table, th, td {
  border: 1px solid black;
}
</style>
<table>
    <tr>
        <th>Sl. No.</th>
        <th>Title</th>
        <th>Content</th>
        <th>Action</th>
    </tr>
    {% for note in notes %}
        <tr>
            <td>{{ loop.index }}</td>
            <td>{{ note.title }}</td>
            <td>{{ note.content }}</td>
            <td>
                <a href="{{ path('note_edit', {id: note.id}) }}">Edit</a>

                <form action="{{ path('note_delete', {id: note.id}) }}" method="post" style="display:inline">
                    <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
    {% endfor %}
</table>